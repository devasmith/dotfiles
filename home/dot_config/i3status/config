general {
  output_format = "i3bar"
  colors = true
  color_good = "#50FA7B"
  color_degraded = "#F1FA8C"
  color_bad = "#FF5555"
  interval = 5
}

order += "wireless _first_"
order += "ethernet _first_"
order += "run_watch VPNC"
order += "path_exists VPN"
order += "battery all"
order += "load"
order += "cpu_temperature 0"
order += "memory"
order += "tztime local"

wireless _first_ {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"
}

ethernet _first_ {
        format_up = "E: %ip"
        format_down = "E: down"
}

path_exists VPN {
        path = "/proc/sys/net/ipv4/conf/ppp0"
	format = "%title: %status"
	format_down = ""
}

battery all {
        format = "%status %percentage %remaining"
        format_down = "No battery"
        status_chr = "âš¡"
        status_bat = "ðŸ”‹"
        status_unk = "? UNK"
        status_full = "â˜» FULL"
        path = "/sys/class/power_supply/BAT%d/uevent"
	threshold_type = "percentage"
        low_threshold = 15
}

load {
        format = "%1min %5min %15min"
	max_threshold = "8"
	format_above_threshold = "Warning: %1min %5min %15min"
}

cpu_temperature 0 {
	format = "T: %degrees Â°C"
	format_above_threshold = "Warning T above threshold: %degrees Â°C"
	max_threshold = 75
}

memory {
        format = "%used"
        threshold_degraded = "10%"
        format_degraded = "MEMORY: %free"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}
